{
  "manifest_version": 3,
  "name": "Twitter Trollface Replacer",
  "version": "1.0",
  "description": "Replaces :trollface: with trollface emoji on Twitter/X",
  "permissions": [],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "troll.webp",
    "128": "troll.webp"
  },
  "web_accessible_resources": [
    {
      "resources": ["troll.webp"],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ]
}
